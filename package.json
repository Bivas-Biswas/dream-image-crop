{
  "name": "portfolio-minimal",
  "author": "bivas-biswas",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "start": "next start -p ${PORT:=3000}",
    "build": "next build",
    "dev": "next dev",
    "prettier": "prettier --bracket-same-line true --check .",
    "prettier:fix": "prettier --bracket-same-line true --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "verify": "pnpm prettier && pnpm lint",
    "verify:fix": "pnpm prettier:fix && pnpm lint:fix",
    "fixdev": "git checkout master && git pull && git checkout dev && git rebase master",
    "prepare": "husky install",
    "pretty-staged": "pretty-quick --staged"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@radix-ui/react-icons": "^1.1.0",
    "@twind/next": "^1.0.9",
    "autoprefixer": "^10.0.2",
    "next": "12.1.0",
    "next-seo": "^5.4.0",
    "nextjs-progressbar": "^0.0.14",
    "postcss": "^8.1.0",
    "prettier-config-standard": "^5.0.0",
    "pretty-quick": "^3.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "twind": "^0.16.16"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-eslint": "^10.0.0",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-flowtype": "^5.10.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm prettier",
      "pre-push": "pnpm verify"
    }
  }
}
